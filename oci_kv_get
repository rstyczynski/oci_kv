#!/bin/bash
# Usage: oci_kv_get <key>
#        oci_kv_get <key> > file
# Bucket is taken from OCI_KV_STORE env var (default: kv_store)

set -euo pipefail

bucket="${OCI_KV_STORE:-kv_store}"
key="${1:?Usage: oci_kv_get <key>}"

oci os object get --bucket-name "$bucket" --name "$key" --file /dev/stdout
